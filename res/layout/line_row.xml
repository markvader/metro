<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:background="#1a328c"
	>

<TextView android:id="@+id/line"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="8pt"
    />
    </LinearLayout>

	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		
	>
	<TextView android:id="@+id/stop_hour"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView android:layout_width = "wrap_content" android:layout_height="wrap_content" android:text="." />
	<TextView android:id="@+id/stop_minute"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView android:layout_width = "wrap_content" android:layout_height="wrap_content" android:text="=" />    
	<TextView android:id="@+id/station"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize = "8pt"
    />
    
</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		
	>
	<TextView android:id="@+id/target_stop_hour"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView android:layout_width = "wrap_content" android:layout_height="wrap_content" android:text="." />
	<TextView android:id="@+id/target_stop_minute"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView android:layout_width = "wrap_content" android:layout_height="wrap_content" android:text="=" />    
	<TextView android:id="@+id/target_station"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize = "8pt"
    />

    </LinearLayout>
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:background="#006699"
	>    
	<TextView    
	android:id = "@+id/daydescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    </LinearLayout> 
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
<TextView android:id="@+id/from"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    
    <TextView android:layout_width = "wrap_content" android:layout_height="wrap_content" android:text=" -> " />

<TextView android:id="@+id/to"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    
    </LinearLayout>

	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">

<TextView android:text="via "    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
<TextView android:id="@+id/via"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    
    </LinearLayout>
    

    
</LinearLayout>